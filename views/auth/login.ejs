<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <div class="container">
        <form class="login-form" action="/login" method="POST">
            <div class="form-group">
                <label for="email">E-Mail</label>
                <input class="form-control" type="email" name="email" id="email">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <div style="display: inline-block;text-align:right;margin-right: -10px;"><a class="btn" style="color: #6255a5;" href="/reset">Reset Password</a></div>
                <input class="form-control" type="password" name="password" id="password">
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit" style="background-color:#d9a7c7; color: rgb(0, 0, 0);width: 130px;height: 40px;">Login</button>
        </form>
        </div>
        

    </main>
    <svg style = "background: #d9a7c7;  /* fallback for old browsers */
    background: -webkit-linear-gradient(to right, #fffcdc, #d9a7c7);  /* Chrome 10-25, Safari 5.1-6 */
    background: linear-gradient(to right, #fffcdc, #d9a7c7); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
     position: fixed;left: 0;right: 0;top: 0;bottom: 0;width: 100%;height: 100%;z-index: -9999;"></svg>
<%- include('../includes/end.ejs') %>